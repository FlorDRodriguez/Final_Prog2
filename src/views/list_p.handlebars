<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

<div class="container p-4">
    <div class="row">
        {{#each products}} {{!recorre los enlaces enviados}}
        
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="row center">
                            <h4 class="card-title text-uppercase">{{!uppercase para que el texto esté en MAYUS}}
                                {{ nameProd }}
                            </h4>
                        </div>
                        <div class="icono_p">
                            <li style="list-style: none; ">
                                <a class="navbar-toggler" href="#" id="navbarDropdown" role="button" data-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical" style="color: rgba(0,0,0,.54);"></i>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="/products/delete/{{ id }}">Eliminar</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/products/edit/{{ id }}">Editar</a>
                                </div>
                            </li>
                        </div>
                        <p class="m-2"> {{ nameCat }} </p>
                        <p class="m-2"> Marca {{ brand }} </p>
                        <p class="m-2"> {{ min_desc }} </p>
                        <p class="m-2"> Cantidad: {{ quantity }} </p>
                        {{!
                        <div class="btn-group">
                            <a href="/products/delete/{{ id " class="btn btn-danger">Eliminar</a>
                        </div>
                        <div class="btn-group">
                            <a href="/products/edit/{{ id " class="btn btn-secondary">Editar</a>
                        </div>
                        }}
                    </div>
                </div>
            </div>
        {{else}} {{!Si no hay ningún enlace envia un mje}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay productos agregados aún</p>
                    <a href="/products/add_p">¡Agrega un producto!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>